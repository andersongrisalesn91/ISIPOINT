<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/CardViewConsultas">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/titulo_item_reporte"
                android:text="@string/codigo" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/item_reporte"
                android:id="@+id/codigo" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/titulo_item_reporte"
                android:text="@string/saldo" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/item_reporte"
                android:id="@+id/valorSaldo" />
        </LinearLayout>

        <View style="@style/CardViewSeparador"
            android:layout_width="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Space
                android:layout_width="0dp"
                android:layout_weight="0.8"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="0.1"
                android:layout_height="40dp"
                android:id="@+id/transaccionesTarjeta"
                app:srcCompat="@drawable/ico_menu_cliente_transacciones_realizadas"
                android:contentDescription="@string/img_transacciones" />
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="0.1"
                android:layout_height="40dp"
                android:id="@+id/inicioUsoPin"
                app:srcCompat="@drawable/ic_play"
                android:contentDescription="@string/img_usar_tarjeta" />
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="0.1"
                android:layout_height="40dp"
                android:id="@+id/comprarPaquete"
                app:srcCompat="@drawable/ic_card"
                android:contentDescription="@string/img_comprar_paquete" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>