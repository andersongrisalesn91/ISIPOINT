<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/panel_padding"
    android:paddingEnd="@dimen/panel_padding"
    android:orientation="vertical"
    style="@style/AppTheme.Burbuja" >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <TextView android:id="@+id/bubble_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/text_view_default"
                android:layout_gravity="start"/>
        </LinearLayout>
        <TextView android:id="@+id/hora_inicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/text_view_default"/>

        <TextView android:id="@+id/hora_vencimiento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/text_view_default"/>

        <TextView android:id="@+id/cliente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/text_view_default"/>

        <TextView android:id="@+id/placa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/text_view_default"/>

        <TextView android:id="@+id/tiempo_vencerse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/text_view_default"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Space
                android:layout_width="0dp"
                android:layout_weight="0.1"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="0.1"
                android:layout_height="40dp"
                android:id="@+id/imprimir"
                android:src="@drawable/print"
                android:contentDescription="@string/imprimir" />
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="0.1"
                android:layout_height="40dp"
                android:id="@+id/salir"
                app:srcCompat="@drawable/ic_menu_exit"
                android:contentDescription="@string/imprimir" />
        </LinearLayout>

</LinearLayout>
