<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/colorSecundario</item>
        <item name="android:buttonStyle">@style/BotonNormal</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@color/colorSecundario</item>
    </style>

    <style name="AppTheme.AppBarMain" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.Burbuja" parent="AppTheme">
        <item name="android:background">@drawable/bonuspack_bubble</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="BotonNormal" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@color/textoBoton</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:layout_marginRight">@dimen/panel_padding</item>
        <item name="android:layout_marginLeft">@dimen/panel_padding</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="TextTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorTitle</item>
    </style>
    <style name="ContenedorFormulario">
        <item name="android:paddingStart">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingEnd">@dimen/activity_horizontal_margin</item>
    </style>
    <style name="TituloFragmento">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorTitle</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">@color/colorSecundario</item>
        <item name="android:padding">@dimen/title_padding</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>
    <style name="Warning">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorSecundario</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">@color/colorWarning</item>
        <item name="android:padding">@dimen/title_padding</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>
    <style name="TituloBusqueda">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorTitle</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">@color/colorSecundario</item>
        <item name="android:padding">@dimen/title_padding</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>
    <style name="ImagenCalendario">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:src">@drawable/ic_date_range</item>
    </style>
    <style name="TextoCalendario">
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorTextCard</item>
    </style>
    <style name="ImagenBuscar">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:src">@drawable/ic_search</item>
    </style>

    <style name="TextoHello">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorTextCard</item>
    </style>

    <style name="radioButton" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppDatePickerStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CardViewConsultas" parent="CardView">
        <item name="cardCornerRadius">4dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="android:textColor">@color/colorTextCard</item>
        <item name="android:layout_marginStart">10dp</item>
    </style>

    <style name="CardViewSeparador">
        <item name="background">@color/colorTextCard</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:editTextColor">@color/colorTextCard</item>
        <item name="android:textColor">@color/colorTextCard</item>
        <item name="android:icon">@drawable/ic_search</item>
    </style>

    <style name="edit_text_default" parent="@style/Widget.AppCompat.EditText">
        <item name="android:layout_marginBottom">30dp</item>
    </style>

    <style name="spinner_default" parent="@style/Widget.AppCompat.Spinner">
        <item name="android:layout_marginBottom">30dp</item>
    </style>

    <style name="spinner_busqueda" parent="@style/Widget.AppCompat.Spinner">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="text_view_default" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_marginBottom">@dimen/panel_padding</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_view_read_only" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_marginBottom">10dp</item>
    </style>

</resources>
