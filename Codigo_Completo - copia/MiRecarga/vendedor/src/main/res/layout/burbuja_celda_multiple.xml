<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/panel_padding"
    android:paddingEnd="@dimen/panel_padding"
    android:orientation="vertical"
    style="@style/AppTheme.Burbuja" >
        <Button
            android:id="@+id/vender"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:text="@string/vender"
            style="@style/BotonNormal"/>

        <Button
            android:id="@+id/historico"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:text="@string/historial"
            style="@style/BotonNormal"/>

        <Button
            android:id="@+id/salir"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:text="@string/salida_de_vehiculo"
            style="@style/BotonNormal"/>

</LinearLayout>
